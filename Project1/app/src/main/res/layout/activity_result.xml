<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:weightSum="1">


    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/choice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="77dp"
        android:layout_marginTop="200dp" />

    <ImageView
        android:id="@+id/choice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="false"
        android:layout_marginEnd="77dp"
        android:layout_marginTop="200dp" />

    <TextView
        android:id="@+id/playerId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice1"
        android:layout_centerVertical="true"
        android:layout_marginTop="87dp"
        android:text="        Player1"
        android:textAlignment="viewStart"
        android:textColor="@color/text_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/playerId2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playerId1"
        android:layout_alignBottom="@+id/playerId1"
        android:layout_alignParentEnd="true"
        android:text="Player2        "
        android:textAlignment="viewEnd"
        android:textColor="@color/text_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/playerId1"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_marginTop="24dp"
        android:text="0        :        0 "
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/point"
        android:layout_marginTop="50dp"
        android:text="Play Again!"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/playerId1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/point"
        android:layout_marginTop="50dp"
        android:text="Back"
        android:textSize="18sp" />

</RelativeLayout>